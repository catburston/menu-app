<!-- index.html.erb -->

<h1>All menus</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Recipes</th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td>
            <h3><%= link_to menu.name, menu %></h3>
          <ul class="button-group round">
            <li><%= link_to 'Edit', edit_menu_path(menu), class: "button" %></li>
            <li><%= link_to 'Delete', menu, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></li>
          </ul>
        </td>
        <td>
          <ul>
            <% menu.recipes.each do |r| %>
              <li>
                <%= link_to r.name, recipe_path(r) %>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
