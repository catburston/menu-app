<!-- index.html.erb -->

<h1>All shopping_lists</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Groceries</th>
      <th>Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= link_to shopping_list.menu.name, shopping_list_path(shopping_list) %></td>
        <td>
          <ul>
            <% shopping_list.groceries.each do |g| %>
              <li><%= g.name %></li>
            <% end %>
          </ul>
          <ul>
            <% shopping_list.ingredients.each do |i| %>
              <li><%= i.name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Edit', edit_shopping_list_path(shopping_list) %> | <%= link_to 'Delete', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
