<!-- show.html.erb -->
<% if @ercipe.errors.any? %>
  <div data-alert class="alert-box" id="notice">
    <%= notice %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<div class="row">
  <div class="large-12 columns">
    <h2><%= @recipe.name %></h2>
    <%= @recipe.recipe_category %> | <%= @recipe.recipe_type %> | <%= @recipe.chef %>
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <h3>Ingredients:</h3>
    <ul>
      <% @recipe.ingredients.each do |i| %>
        <li><%= i.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="small-9 columns">
    <h3>Method</h3>
    <p>
      <%= @recipe.method %>
    </p>
  </div>
</div>

<hr>

<p>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> | <%= link_to 'Delete', @recipe, method: :delete, data: { confirm: 'Are you sure?' }  %>
</p>
