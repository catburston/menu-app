<!-- _form.html.erb -->

<%= simple_form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div data-alert class="alert-box" id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <div class="field row">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field row">
    <%= f.label :recipe_category %><br>
    <%= select(:recipe, :recipe_category, ['pasta', 'rice', 'soup', 'salad', 'sweets', 'other']) %>
  </div>
  <div class="field row">
    <%= f.label :recipe_type %><br>
    <%= select(:recipe, :recipe_type, ['schoolnight', 'potheavy', 'main', 'side', 'dessert']) %>
  </div>
  <div class="field row">
    <%= f.label :chef %><br>
    <%= select(:recipe, :chef, ['Cat', 'Tom']) %>
  </div>
  <div class="field row">
    <%= f.collection_check_boxes(:ingredient_ids, @ingredients, :id, :name, :collection_wrapper_tag => :ul, :collection_wrapper_class => "small-block-grid-4", :item_wrapper_tag => "li", :item_wrapper_class => "checkbox_container") %>
  </div>
  <div class="actions row">
    <%= f.submit "Save", class: "button" %>
  </div>
<% end %>
